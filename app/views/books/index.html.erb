<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div ng-app="BookApp">
  <div ng-controller="indexController">
    <div ui-grid="gridOptions" class="bookGrid">
    </div>
  </div>
</div>


<table class= "table bordered table">
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Author Name</th>
      <th>ISBN Code</th>
      <th>Number of Books</th>
      <th>Publish Date</th>
      <th>Book Category</th>
      <th>Number of Books Issued</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.isbn_code %></td>
        <td><%= book.number_of_books %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.book_category %></td>
        <td><%= book.number_of_books_issued %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Book', new_book_path %></button>

<h1>Transactions</h1>

<table class= "table bordered table">
  <thead>
    <tr>
      <th>Book</th>
      <th>Transaction Date</th>
      <th>Transaction Type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<button><%= link_to 'New Transaction', new_transaction_path %></button>
